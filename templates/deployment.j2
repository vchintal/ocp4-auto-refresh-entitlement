kind: Deployment
apiVersion: apps/v1
metadata:
  name: {{ deployment_name }}
  namespace: {{ namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ deployment_name }}
  template:
    metadata:
      annotations:
        alpha.image.policy.openshift.io/resolve-names: '*'
      labels:
        app: {{ deployment_name }}
    spec:
      containers:
        - name: {{ container_image_name }}
          image: {{ container_image_name }}:latest 
          resources: {}
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: Always
          volumeMounts:
            - name: secret-volume
              mountPath: /etc/pki/entitlement
              readOnly: true
          env:
            - name: SYSTEM_UUID
              valueFrom:
                secretKeyRef:
                  name: {{ secret_name }}
                  key: system_uuid
            - name: SLEEP_SECONDS
              value: '{{ sleep_seconds }}'
      volumes:
        - name: secret-volume
          secret:
            secretName: {{ secret_name }}
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
